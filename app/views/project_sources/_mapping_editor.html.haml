.accordion
  .accordion-group
    .accordion-heading
      %a.accordion-toggle{"data-toggle" => "collapse", href: "#collapseOne"}
        Not classified
    #collapseOne.accordion-body.collapse.in
      .accordion-inner
        .recon-panel
          %table.table.table-bordered
            %tr
              %th Source {{mapping_property.name}}
              %th Number of Records
              %th MFL Geo-Political Division

            %tr(ng-repeat='mapping_entry in unclassified_mapping' ng-controller='MappingEntryCtrl')
              %td
                {{mapping_entry.source_value}}
              %td
                {{mapping_entry.source_count}}
              %td
                %a(href='javascript:' ng-click='edit()')
                  {{mapping_entry.target_value || '(choose)'}}

  .accordion-group
    .accordion-heading
      %a.accordion-toggle{"data-toggle" => "collapse", href: "#collapseTwo"}
        Classified
    #collapseTwo.accordion-body.collapse
      .accordion-inner
        .recon-panel
          %table.table.table-bordered
            %tr
              %th Source {{mapping_property.name}}
              %th Number of Records
              %th MFL Geo-Political Division

            %tr(ng-repeat='mapping_entry in classified_mapping' ng-controller='MappingEntryCtrl')
              %td
                {{mapping_entry.source_value}}
              %td
                {{mapping_entry.source_count}}
              %td
                %a(href='javascript:' ng-click='edit()')
                  {{mapping_entry.target_value || '(choose)'}}

#HierarchySelection.modal.hide.fade(ng-controller='HierarchySelectionCtrl')
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
    %h3 Choose geo-political division
  .modal-body
    .recon-panel(ng-show='selected_entry')
      / %rm-collection-context(id="#{@project.master_collection.id}")
      = render 'shared/angular/hierarchy_tree'

    .well(ng-hide='selected_entry')
      Select a source value to edit mapping

  .modal-footer
    %a.btn.btn-link(href='javascript:' ng-click='cancel()') Cancel
    %a.btn.btn-primary(href='javascript:' ng-click='ok()') Save changes


